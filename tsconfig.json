{
    "compilerOptions": {
        "lib": ["es2017"],
        "outDir": "build/compiled",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        // @types/yargs is using `unknown` from TS 3+: ignore it, in order to compile
        "skipLibCheck": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "downlevelIteration": true
    },
    "exclude": [
        "tmp",
        "temp",
        "build",
        "node_modules"
    ]
}
